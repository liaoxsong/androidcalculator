<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_calculator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="horizontal">

        <LinearLayout
            style="@style/EvenHorizontalSpread"
            android:orientation="vertical">

            <Button
                android:id="@+id/key_clear"
                style="@style/CalculatorButtonStyle"
                android:text="C" />

            <Button
                android:id="@+id/key_1"
                style="@style/CalculatorButtonStyle"
                android:text="1" />

            <Button
                android:id="@+id/key_4"
                style="@style/CalculatorButtonStyle"
                android:text="4" />

            <Button
                android:id="@+id/key_7"
                style="@style/CalculatorButtonStyle"
                android:text="7" />

            <Button
                style="@style/CalculatorButtonStyle"
                android:text="" />

        </LinearLayout>

        <LinearLayout
            style="@style/EvenHorizontalSpread"
            android:orientation="vertical">

            <Button
                android:id="@+id/key_divide"
                style="@style/CalculatorButtonStyle"
                android:text="@string/key_divide" />

            <Button
                android:id="@+id/key_2"
                style="@style/CalculatorButtonStyle"
                android:text="2" />

            <Button
                android:id="@+id/key_5"
                style="@style/CalculatorButtonStyle"
                android:text="5" />

            <Button
                android:id="@+id/key_8"
                style="@style/CalculatorButtonStyle"
                android:text="8" />

            <Button
                android:id="@+id/key_0"
                style="@style/CalculatorButtonStyle"
                android:text="0" />
        </LinearLayout>

        <LinearLayout
            style="@style/EvenHorizontalSpread"
            android:orientation="vertical">

            <Button
                android:id="@+id/key_multiply"
                style="@style/CalculatorButtonStyle"
                android:text="@string/key_multiply" />

            <Button
                android:id="@+id/key_3"
                style="@style/CalculatorButtonStyle"
                android:text="3" />

            <Button
                android:id="@+id/key_6"
                style="@style/CalculatorButtonStyle"
                android:text="6" />

            <Button
                android:id="@+id/key_9"
                style="@style/CalculatorButtonStyle"
                android:text="9" />

            <Button
                android:id="@+id/key_dot"
                style="@style/CalculatorButtonStyle"
                android:text="." />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:id="@+id/key_backspace"
            android:textSize="30sp"
            style="@style/CalculatorButtonStyle"
            android:text="DEL" />


        <Button
            android:id="@+id/key_minus"
            style="@style/CalculatorButtonStyle"
            android:text="-" />

        <Button
            android:id="@+id/key_plus"
            style="@style/CalculatorButtonStyle"
            android:text="+" />

        <Button
            android:id="@+id/key_equals"
            style="@style/CalculatorButtonStyle"
            android:layout_weight="2"
            android:text="=" />
    </LinearLayout>

</LinearLayout>
